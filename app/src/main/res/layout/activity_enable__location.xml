<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LocationDetectActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:scaleType="fitCenter"
            android:src="@drawable/enablelocationicon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/fetch_location"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/blue"
            android:text="NEXT"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/textme"
            app:layout_constraintStart_toStartOf="@+id/textme"
            app:layout_constraintTop_toBottomOf="@+id/textme" />

        <TextView
            android:id="@+id/user_location"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Enable Location"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="@+id/logo"
            app:layout_constraintStart_toStartOf="@+id/logo"
            app:layout_constraintTop_toBottomOf="@+id/logo" />

        <TextView
            android:id="@+id/textme"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="You'll need to enable your location in order to use WhereWeAllMeet."
            android:textAlignment="center"
            android:textColor="@color/offwhite"
            app:layout_constraintEnd_toEndOf="@+id/user_location"
            app:layout_constraintStart_toStartOf="@+id/user_location"
            app:layout_constraintTop_toBottomOf="@+id/user_location" />

        <TextView
            android:id="@+id/txtMore"
            style="?android:spinnerStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Tell Me More"
            app:layout_constraintEnd_toEndOf="@+id/fetch_location"
            app:layout_constraintStart_toStartOf="@+id/fetch_location"
            app:layout_constraintTop_toBottomOf="@+id/fetch_location" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="328dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/montserrat"
            android:textSize="14dp"
            android:gravity="center"
            android:text="While using the app, you will allow WhereWeAllMeet to access
your location to provide you the best experience."
            android:textColor="@color/offwhite"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="@+id/fetch_location"
            app:layout_constraintStart_toStartOf="@+id/fetch_location"
            app:layout_constraintTop_toBottomOf="@+id/txtMore" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>