<?xml version="1.0" encoding="utf-8"?>

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:layout_marginTop="10dp"
        tools:context=".FindMtchBlankFragment">


    <TextView
        android:id="@+id/mangend"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/drawerborder"
        android:gravity="center"
        android:padding="5dp"
        android:text="Matches"
        android:textAllCaps="false"
        android:textColor="@color/bpDarker_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/event"
        app:layout_constraintTop_toBottomOf="@+id/tool_bar1" />

    <TextView
        android:id="@+id/event"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@drawable/drawerborder"
        android:gravity="center"
        android:padding="5dp"
        android:text="Events"
        android:textAllCaps="false"
        android:textColor="@color/bpDarker_blue"
        app:layout_constraintEnd_toStartOf="@+id/mangend"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/event"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
