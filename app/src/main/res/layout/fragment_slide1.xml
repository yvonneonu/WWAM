<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/discovermatchesbg"
    xmlns:blurkit="http://schemas.android.com/apk/res-auto">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="470dp"
        blurkit:layout_constraintEnd_toEndOf="parent"
        blurkit:layout_constraintStart_toStartOf="parent"
        blurkit:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/deny"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="211dp"
        android:scaleType="centerCrop"
        android:src="@drawable/deny"
        blurkit:layout_constraintBottom_toBottomOf="parent"
        blurkit:layout_constraintStart_toStartOf="parent"
        blurkit:layout_constraintTop_toBottomOf="@+id/recycler_view" />

    <ImageView
        android:id="@+id/imageView44"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="211dp"
        android:scaleType="centerCrop"
        android:src="@drawable/view"
        blurkit:layout_constraintBottom_toBottomOf="parent"
        blurkit:layout_constraintEnd_toStartOf="@+id/allow"
        blurkit:layout_constraintStart_toEndOf="@+id/deny"
        blurkit:layout_constraintTop_toBottomOf="@+id/recycler_view" />

    <ImageView
        android:id="@+id/allow"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="211dp"
        android:scaleType="centerCrop"
        android:src="@drawable/like"
        blurkit:layout_constraintBottom_toBottomOf="parent"
        blurkit:layout_constraintEnd_toEndOf="parent"
        blurkit:layout_constraintTop_toBottomOf="@+id/recycler_view" />


</androidx.constraintlayout.widget.ConstraintLayout>